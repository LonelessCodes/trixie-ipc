{
  "name": "@trixiebot/ipc",
  "version": "2.1.1",
  "description": "A package used by TrixieBot to communicate with child processes and between independant processes.",
  "homepage": "https://trixiebot.com",
  "license": "GPL-3.0",
  "keywords": [
    "ipc",
    "trixiebot"
  ],
  "author": {
    "name": "Loneless",
    "url": "https://loneless.art"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LonelessCodes/trixie-ipc.git"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "node-ipc": "^9.1.1",
    "ps-tree": "^1.2.0",
    "uuid": "^8.3.1",
    "veza": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.28",
    "@types/node-ipc": "^9.1.3",
    "@types/ps-tree": "^1.1.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "rimraf": "^3.0.2",
    "standard-version": "^4.4.0",
    "type-fest": "^0.18.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">= 10.16.0",
    "npm": ">= 6.9.0"
  },
  "scripts": {
    "prepublishOnly": "npm run lint && npm run build",
    "build": "rimraf dist/ && tsc",
    "lint": "eslint --ext ts,js src",
    "releasemajor": "standard-version --release-as major",
    "releaseminor": "standard-version --release-as minor",
    "releasepatch": "standard-version --release-as patch"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./VezaClientLayer": "./dist/VezaClientLayer.js",
    "./VezaServerLayer": "./dist/VezaServerLayer.js",
    "./ChildProcessLayer": "./dist/ChildProcessLayer.js",
    "./respawn": "./dist/respawn.js"
  },
  "types": "./dist/index.d.ts"
